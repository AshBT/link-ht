.panel.panel-default(ng-repeat='ad in suggestedAds')

	#head2.panel-heading.h1 {{ad.properties.sources_id}} at {{ad.properties.posttime}}
	.panel-body.vertical-layout
		.item
			h4 {{ad.properties.title}}
			p {{ad.properties.text}}
			p: a(href='{{ad.properties.url}}') View original post
		.item
			row
			col-md-3(ng-repeat='img in ad.properties.image_locations')
				img.responsive(ng-src="{{img}}" 
					style="max-height:100px; margin:0 auto;"
					ng-class="{blurry: blur == true, clear: blur != true}")
		.panel-footer.clearfix
			span.glyphicon.glyphicon-camera(ng-if='ad.suggestedByImage' popover="Suggested by image similarity" popover-trigger="mouseenter" popover-placement="right")
			span.label.label-default(ng-if='ad.suggestedByImage' popover="Suggested by image similarity" popover-trigger="mouseenter" popover-placement="right") Similar Images
			span.glyphicon.glyphicon-font(ng-if='ad.suggestedByText' popover="Suggested by text similarity" popover-trigger="mouseenter" popover-placement="right")
			span.label.label-default(ng-if='ad.suggestedByText' popover="Suggested by text similarity" popover-trigger="mouseenter" popover-placement="right") Similar Text
			span.glyphicon.glyphicon-user(ng-if='ad.suggestedByUsername' popover="Suggested by identical username" popover-trigger="mouseenter" popover-placement="right")
			span.label.label-default(ng-if='ad.suggestedByUsername' popover="Suggested by identical username" popover-trigger="mouseenter" popover-placement="right") Identical Username
			span.glyphicon.glyphicon-film(ng-if='ad.suggestedByVideo' popover="Suggested by video similarity" popover-trigger="mouseenter" popover-placement="right")
			span.glyphicon.glyphicon-earphone(ng-if='ad.suggestedByPhone' popover="Suggested by phone number co-occurence" popover-trigger="mouseenter" popover-placement="right")
			span.label.label-default(ng-if='ad.suggestedByPhone' popover="Suggested by phone number co-occurence" popover-trigger="mouseenter" popover-placement="right") Phone Co-occurrence
			.pull-right
				button.btn-primary(ng-click='linkToEntity(ad)') 
					|Link to Entity
.panel.panel-default(ng-repeat="ad in similarAdsbyImage | orderBy:'-posttime'")

	#head2.panel-heading.h1 {{sourceMap[ad.sources_id]}} at {{ad.posttime | date}}
	.panel-body.vertical-layout
		.item
			h4 {{ad.title}}
			p {{ad.text}}
			p Original Post's URL: {{ad.url}} 
		.item
			row
			col-md-3(ng-repeat='img in ad.image_locations track by $index')
				img.responsive(ng-src="{{img}}" 
					style="max-height:100px; margin:0 auto;"
					ng-class="{blurry: blur == true, clear: blur != true}")
		.panel-footer.clearfix
			span.glyphicon.glyphicon-camera(popover="Suggested by image similarity" popover-trigger="mouseenter" popover-placement="right")
			span.label.label-default(popover="Suggested by image similarity" popover-trigger="mouseenter" popover-placement="right") Similar Images
			.pull-right
				button.btn-primary(ng-click='linkToEntity(ad)') 
					|Link to Entity


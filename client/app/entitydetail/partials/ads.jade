.panel.panel-default(ng-repeat='ad in ads')
	#head2.panel-heading  {{getHost(ad.data.url)}} -- {{ad.data.posttime}}
	.panel-body
		p Title: {{ad.data.title}}
		p Text: {{ad.data.text}}
		p: a(href='{{ad.data.url}}') View original post

		//- carousel
		//- 	slide(ng-repeat='img in ad.data.image_locations')
		//- 		img(ng-src="{{img}}" style="max-height:300px; margin:0 auto;")
		row
			col-md-3(ng-repeat='img in ad.data.image_locations')					
				img.responsive(ng-src="{{img}}" 
					style="max-height:100px; margin:0 auto;"
					ng-class="{blurry: blur == true, clear: blur != true}")
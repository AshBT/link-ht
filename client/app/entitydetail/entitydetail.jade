div(ng-include='"components/navbar/navbar.html"')

.container
	.row
		.entity-summary.col-md-3
			
			.panel.panel-default
				.panel-heading Entity Profile
				.panel-body
					p Phone: {{entity.phone | tel}}
					p Ages: {{entity.ages.join(', ')}}
					p Cities: {{entity.cities.join(', ')}}
					p Ethnicities: {{entity.ethnicities.join(', ')}}
					p {{ads.length}} Ads
					p {{reviews.length}} Reviews

			.panel.panel-default(style="height: 300px")
				.panel-heading Map
				.panel-body
					|map goes here
			
			.panel.panel-default
				.panel-heading Options
				.panel-body
					label Blur Images:
						input(type="checkbox" ng-model="blur")
			
		.col-md-9
			cal-heatmap(config="{domain:'year',range:1,cellSize:15}")

			hr

			tabset
				tab(heading='{{ads.length}} Ads within Entity')
					include ./partials/ads.jade
				tab(heading='{{suggestedAds.length}} Suggested Ads')
					include ./partials/images.jade

footer.footer
	.container
		p Qadium 2015
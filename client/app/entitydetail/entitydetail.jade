div(ng-include='"components/navbar/navbar.html"')

.container
	.row 
		.col-md-3
			.panel.panel-default
				.panel-heading Entity: {{entity.phone | tel}}
				.panel-body.vertical-layout
					.item
						col-md-3(ng-repeat='img in face_image_url')
							img.responsive(ng-src="{{img}}"
								style="max-height:80px; margin:0 auto;"
								ng-class="{blurry: blur == true, clear: blur != true}")
					.item
						p Names: {{entity.name.join(', ') | capitalize}}
					.item 
						label Blur Images:
						input(type="checkbox" ng-model="blur")
					.item 
						button.btn-success() Save Entity 
			
			.panel.panel-default
				.panel-heading 
					| Automated Analysis
				.panel-body
					ul
						li Movement pattern analysis (i.e. lots of ads in many places, SF-NY pattern, etc.)
						li Highlighted key words (relatively distinct tri-grams)

			.panel.panel-default(style="height: 400px")
				.panel-heading Map
				ui-gmap-google-map(center='map.center', zoom='map.zoom')
					ui-gmap-markers(models='markers', coords="'self'", icon="'icon'")

			.panel.panel-default
				.panel-heading Entity Identifiers
					.vertical-layout

						ul.nobullets.item
							li e-mail: {{entity.email[0].join(', ') }}
							li Address: <input type="text" name="twitter" ng-model="twitter" required>
							li Twitter: <input type="text" name="twitter" ng-model="twitter" required> 
							li Instagram: <input type="text" name="instagram" ng-model="instagram" required>
							li Youtube: <input type="text" name="youtube" ng-model="youtube" required>
							li Yelp: <input type="text" name="yelp" ng-model="yelp" required>
						.item
							button.btn-primary() Submit New Attributes 

			.panel.panel-default
				.panel-heading Entity Details
				.panel-body
					ul.nobullets
						li Ages: {{entity.age.join(', ')}}
						li Ethnicities: {{entity.ethnicities.join(', ') | capitalize}}
						li Hourly Price Range: {{entity.minPrice}} to {{entity.maxPrice}}
						li Mode Price: {{entity.modePrice}}
						li Height: {{entity.height.join(', ')}}
						li Weight: {{entity.weight.join(', ')}}
						li Eyes: {{entity.eyes.join(', ')}}
						li Hair: {{entity.hair.join(', ')}}
						li Cities: {{entity.cities.join(', ') | capitalize}}
			
		.col-md-9
			.panel.panel-default
				.panel-heading Active Since {{entity.postTimes[0]}}
				entity-heatmap(config='heatmapConfig', entityId='id')

			.panel.panel-default
				tabset
					tab(heading='{{ads.length}} Ads and Reviews')
						include ./partials/ads.jade
					tab(heading='{{imageUrls.length}} Images')
						include ./partials/images.jade
					tab(heading='{{suggestedAds.length}} Similar Ads')
						include ./partials/suggested.jade
					tab(heading='0 Annotations')
						include ./partials/annotations.jade
					tab(heading='0 Social Media Posts')
						include ./partials/twitter.jade

footer.footer
	.container
		p Designed and Developed by Qadium 2015. All code is open source.
		p About Help Terms Privacy 
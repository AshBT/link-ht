	form.form-horizontal
	.form-group
		.col-xs-10
			.checkbox
				label
					input(type='checkbox' ng-model='mb.showSelector') 
					| Select by Geographic Bounding Box

.col-md-12
	div(range-slider='', min='mb.dateSlider.range.MIN', max='mb.dateSlider.range.MAX', model-min='mb.dateSlider.minDate', model-max='mb.dateSlider.maxDate')